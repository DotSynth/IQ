<Page
    x:Class="IQ.Views.BranchViews.Pages.TransferOutwards.TransferOutwardsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IQ.Views.BranchViews.Pages.TransferOutwards"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls" 
    xmlns:overlay="using:IQ.Views.BranchViews.Pages.TransferOutwards.SubPages"
    x:Name="TOutsPageTitle"
    mc:Ignorable="d"
    DataContext="IQ.Helpers.DatabaseOperations.DatabaseExtensions">

    <StackPanel
        Orientation="Vertical"
        Name="TOutsPanel">
        <TextBlock Text="BRANCH TRANSFER OUTWARDS"
           TextWrapping="NoWrap"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"
           Margin="0,10,0,0"
           Foreground="#020066"
           FontFamily="{StaticResource Righteous}"/>

        <!-- Popup for overlay content -->
        <Popup x:Name="TOutsOverlayPopUp" IsOpen="False" LightDismissOverlayMode="Off" IsLightDismissEnabled="True">
            <overlay:AddTOutsOverlay/>
        </Popup>

        <Rectangle 
            Height="1"
            HorizontalAlignment="Stretch"
            Fill="#E2E2E2"
            Margin="0,10,0,0"/>
        <Grid
            Margin="0,10,0,0"
            RowSpacing="14">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button 
                x:Name="TOutsAddButton"
                Grid.Row="0"
                Grid.Column="0"
                Content="Add"
                Foreground="#020066"
                FontFamily="{StaticResource Righteous}"
                Width="120"
                Margin="14,0,14,0"
                HorizontalAlignment="Left"
                Click="TOutsAddButton_Click">
            </Button>
            <AutoSuggestBox
                x:Name="BranchTOutsAutoSuggestBox"
                Grid.Row="1"
                Grid.Column="1"
                QueryIcon="Zoom"
                Margin="0,0,14,0"
                Foreground="#020066"
                SuggestionChosen="BranchTOutsAutoSuggestBox_SuggestionChosen"
                QuerySubmitted="BranchTOutsAutoSuggestBox_QuerySubmittedAsync"
                TextChanged="BranchTOutsAutoSuggestBox_TextChangedAsync"
                FontFamily="{StaticResource Righteous}"
                PlaceholderText="Search Transfer ID..."/>
            <DatePicker
                Grid.Row="0"
                Grid.Column="2"
                x:Name="BranchTOutsDatePicker"
                Foreground="#020066"
                FontFamily="{StaticResource Righteous}"
                HorizontalAlignment="Right"
                Margin="0,0,14,0"
                SelectedDateChanged="BranchTOutsDatePicker_SelectedDateChanged">
            </DatePicker>
        </Grid>
        <Rectangle 
            Height="1"
            HorizontalAlignment="Stretch"
            Fill="#E2E2E2"
            Margin="0,10,0,0"/>
        <controls:DataGrid x:Name="BranchTOutsDataGrid"
                           ColumnWidth="*"
                           Margin="0,10,0,0"
                           FontFamily="{StaticResource SplineSans}"
                           ItemsSource="{x:Bind ViewModel.BranchTOut}" 
                           AutoGenerateColumns="True"
                           Foreground="#020066"
                           GridLinesVisibility="Vertical"
                           AlternatingRowBackground="#f1f2f5">
        </controls:DataGrid>
        <Frame x:Name="rootFrame"/>
    </StackPanel>
</Page>
